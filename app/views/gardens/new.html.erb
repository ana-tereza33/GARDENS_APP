<div class="container">
<h1>Create a new Garden</h1>
  <%= simple_form_for(@garden) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :long_description %>
    <%= f.input :price %>
    <%= f.input :main_photo, as: :file %>
    <%= f.input :sub_photos, as: :file, input_html: { multiple: true }, label: "More Photos" %>
    <%= f.submit %>
  <% end %>
</div>
