<div class="container color-nice">
  <h1> <%= @garden.name %></h1>
  <%# <p>Find me in app/views/gardens/show.html.erb</p> %>

  <div class="row">

    <div class="col-6">
      <%= cl_image_tag @garden.sub_photos.first.key, alt: "#{@garden.name} Image", class: "card-garden-img",crop: "fit" %>
    </div>

    <div class="col-6">
      <%= cl_image_tag @garden.sub_photos.last.key, alt: "#{@garden.name} Image", class: "card-garden-img", crop: "fit"  %>

    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <div class=" description">
        <%= @garden.description %>
      </div>
      <div class=" long_description">
        <%= @garden.long_description %>
      </div>
    </div>

    <div class="col-6 price d-flex justify-content-end">
      <%# <i class="fas fa-money-bill"> %>

      </i> <%= @garden.price.to_i %> $
    </div>
  </div>


  <div class="row">

    <div class="col-6 address">
        <i class="fas fa-map-marker-alt"></i> <%= @garden.address %>
    </div>

    <div class="col-6 d-flex justify-content-end">
      <% if user_signed_in? %>
        <div style="">
        <%= link_to "Book", new_garden_booking_path(@garden), class: "btn btn-primary", id: "booking-button" %>
        </div>
      <% end %>

    </div>
  </div>

<div>
  <%= link_to root_path, class: "link-custom" do %>
    <i class="fas fa-arrow-left"></i> Back to list
  <% end %>
</div>


</div>
