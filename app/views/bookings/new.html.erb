<div class="container">
  <h1>Book a Garden</h1>

  <%= simple_form_for [@garden, @booking] do |f| %>
    <div>
    <%= f.label :start_date %>
    <%= f.text_field :start_date, placeholder:"DD/MM/YYYY" %>
    </div>

    <br />

    <div>
    <%= f.label :end_date %>
    <%= f.text_field :end_date, placeholder:"DD/MM/YYYY" %>
    </div>

    <br />

    <%= f.submit "Create", id: "booking-button"%>
  <% end %>
</div>
